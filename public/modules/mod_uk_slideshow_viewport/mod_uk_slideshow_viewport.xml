<?xml version="1.0"?>
<extension type="module" version="3.*" method="upgrade" client="site">
    <name>UIkit 3 Slideshow Viewport Height</name>
    <author>© 2022 Joomlaplates</author>
    <copyright>© 2022 Joomlaplates. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later; see http://www.gnu.org/licenses/gpl-3.0.txt</license>
    <version>1.2.5</version>
    <creationDate>2022</creationDate>
    <description><![CDATA[
		<p class="btn btn-sm btn-info" p>Version 1.2.5</p>
		<p><a class="btn btn-sm btn-success" href="https://www.joomlaplates.de/dokumentation.html" target="_blank">Dokumentation</a></p>
    ]]></description>
	<updateservers>
		<server type="extension" priority="2" name="UIkit 3 Slideshow Viewport Height">https://www.joomlaplates.de/updates/uikit/mod_uk_slideshow_viewport.xml</server>
	</updateservers>
    <files>
        <filename module="mod_uk_slideshow_viewport">mod_uk_slideshow_viewport.php</filename>
		<filename>changelog.txt</filename>
        <folder>forms</folder>
        <folder>tmpl</folder>
    </files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.mod_uk_slideshow_viewport.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_uk_slideshow_viewport.sys.ini</language>
    </languages>
    <config>
        <fields name="params">

            <fieldset name="basic">
				<field	name="layout" type="modulelayout"	label="JFIELD_ALT_LAYOUT_LABEL"	description="JFIELD_ALT_MODULE_LAYOUT_DESC"	/>
                <field name="viewport" type="hidden" label="Viewport Height" default="1" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field name="dotnav" type="list" label="MOD_UK_SLIDESHOW_DOTNAV" default="1" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="dotnav_pos" type="list" label="DotNav Position" default="1" class="btn-group">
                    <option value="1">Inside</option>
                    <option value="0">Outside</option>
                </field>
				
                <field name="slidenav" type="list" label="MOD_UK_SLIDESHOW_SLIDENAV" default="1" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="animation" type="list" label="MOD_UK_SLIDESHOW_ANIMATION" default="slide">
                    <option value="slide">MOD_UK_SLIDESHOW_ANIMATION_SLIDE</option>
                    <option value="fade">MOD_UK_SLIDESHOW_ANIMATION_FADE</option>
                    <option value="scale">MOD_UK_SLIDESHOW_ANIMATION_SCALE</option>
                    <option value="pull">MOD_UK_SLIDESHOW_ANIMATION_PULL</option>
                    <option value="push">MOD_UK_SLIDESHOW_ANIMATION_PUSH</option>
                </field>
				
                <field name="velocity" type="text" label="MOD_UK_SLIDESHOW_VELOCITY" default="1" class="input-small" />
                <field name="autoplay" type="list" label="MOD_UK_SLIDESHOW_AUTOPLAY" default="0" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="autoplay_interval" type="text" label="MOD_UK_SLIDESHOW_AUTOPLAY_INTERVAL" default="7000" class="input-small" />
                <field name="finite" type="list" label="MOD_UK_SLIDESHOW_FINITE" default="0" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="pause_on_hover" type="list" label="MOD_UK_SLIDESHOW_PAUSE_ON_HOVER" default="0" class="btn-group">
                    <option value="true">JYES</option>
                    <option value="false">JNO</option>
                </field>
                
				<field name="content_class" type="text" label="Class for Content" class="input-large"/>
				<field name="content_before" type="editor" label="Content" description="" filter="safehtml" />
            </fieldset>
			
			
            <fieldset name="slides">
                <field name="items" type="subform" label="COM_MODULES_SLIDES_FIELDSET_LABEL" formsource="/modules/mod_uk_slideshow_viewport/forms/form.xml" multiple="true" min="0" groupByFieldset="false" layout="joomla.form.field.subform.repeatable" />
            </fieldset>

            <fieldset name="advanced">
                <field name="cache" type="list" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC" default="1">
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                </field>
            </fieldset>

        </fields>
    </config>
</extension>