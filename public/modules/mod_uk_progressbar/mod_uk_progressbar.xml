    <version>1.2.0</version>
    <creationDate>2022</creationDate>
    <description><![CDATA[
		<p class="btn btn-sm btn-info" p>Version 1.2.0</p>
		<p><a class="btn btn-sm btn-success" href="https://www.joomlaplates.de/dokumentation.html" target="_blank">Dokumentation</a></p>
    ]]></description>
	<updateservers>
		<server type="extension" priority="2" name="UIkit 3 Progressbar">https://www.joomlaplates.de/updates/uikit/mod_uk_progressbar.xml</server>
	</updateservers>
    <files>
        <filename module="mod_uk_progressbar">mod_uk_progressbar.php</filename>
		<folder>css</folder>
        <folder>forms</folder>
        <folder>tmpl</folder>
		<filename>changelog.txt</filename>
    </files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.mod_uk_progressbar.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_uk_progressbar.sys.ini</language>
    </languages>
    <config>
        <fields name="params">

            <fieldset name="basic">
			 				<field name="content_before_class" type="text" label="Content Before Class" class="input-large"/>
				<field name="content_before" type="editor" label="Content Before Items" rows="2" filter="raw" /> 
   

            </fieldset>

            <fieldset name="slides">
                <field name="items" type="subform" label="COM_MODULES_ELS_FIELDSET_LABEL" formsource="/modules/mod_uk_progressbar/forms/form.xml" multiple="true" min="0" layout="joomla.form.field.subform.repeatable" />
            </fieldset>

            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field name="cache" type="list" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC" default="1">
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                </field>
            </fieldset>

        </fields>
    </config>
</extension>