<?xml version="1.0" encoding="UTF-8"?>
<form>
	<field name="cols" type="radio" label="Show and Hide Items for better Overview" default="0" >
		<option value="0">JHIDE</option>
		<option value="1">JSHOW</option>
	</field>

	<field name="circle_color" type="color" label="Circle Color" default="#222" class="input-small" showon="cols!:0" />
	<field name="circle_bg" type="color" label="Circle Background" default="#f2f2f2" class="input-small" showon="cols!:0" />
	<field name="circle_value" type="text" label="Circle Value" default="65" class="input-small" showon="cols!:0" />
	<field name="circle_width" type="text" label="Circle Width" default="150" class="input-small" showon="cols!:0" />
	<field name="circle_speed" type="text" label="Circle Speed" default="2000" class="input-small" showon="cols!:0" />
	<field name="circle_thickness" type="text" label="Circle Thickness" default="15" class="input-small" showon="cols!:0" />

    <field name="title" type="text" label="MOD_UK_SLIDER_FORM_TITLE" class="input-large" showon="cols!:0" />
	
    <field name="content" type="textarea" label="MOD_UK_SLIDER_FORM_CONTENT" rows="3" filter="raw" class="span6" showon="cols!:0" />
</form>