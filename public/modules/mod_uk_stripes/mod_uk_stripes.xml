<?xml version="1.0"?>
<extension type="module" version="3.*" method="upgrade" client="site">
    <name>UIkit 3 Stripes</name>
    <author>Joomlaplates</author>
	<authorEmail>support@joomlaplates.de</authorEmail>
    <authorUrl>https://joomlaplates.de/</authorUrl>
    <copyright>Â© 2021 Joomlaplates. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later; see http://www.gnu.org/licenses/gpl-3.0.txt</license>
    <version>1.2.7</version>
    <creationDate>2022</creationDate>
    <description><![CDATA[
		<p class="btn btn-sm btn-info" p>Version 1.2.7</p>
		<p><a class="btn btn-sm btn-success" href="https://www.joomlaplates.de/dokumentation.html" target="_blank">Dokumentation</a></p>
    ]]></description>
	<updateservers>
		<server type="extension" priority="2" name="Uikit 3 Stripes">https://www.joomlaplates.de/updates/uikit/mod_uk_stripes.xml</server>
	</updateservers>
    <files>
        <filename module="mod_uk_stripes">mod_uk_stripes.php</filename>
		<filename>changelog.txt</filename>
        <folder>forms</folder>
        <folder>tmpl</folder>
    </files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.mod_uk_stripes.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_uk_stripes.sys.ini</language>

    </languages>
    <config>
        <fields name="params">

            <fieldset name="basic">
                <field name="dotnav" type="list" label="MOD_UK_SLIDER_DOTNAV" default="1" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="item_style" type="list" label="Style" default="uk-card-white">
                    <option value="none">None</option>
					<option value="uk-card-white">White</option>
                    <option value="uk-card-default">White Shadow</option>
                    <option value="bg-dark text-white">Dark</option>
                </field>
                <field name="item_space" type="list" label="Card Space" default="uk-card-small">
                    <option value="uk-card-small">Small</option>
					<option value="uk-card-large">Large</option>
                </field>
                <field name="media_align" type="list" label="Image Left or Right" default="uk-card-media-left">
                    <option value="uk-card-media-left">Image Left</option>
					<option value="uk-flex-last@s uk-card-media-right">Image Right</option>
                </field>
				
                <field name="item_count" type="list" label="Slide in a Row" default="2">
                    <option value="1">1 in a row</option>
					<option value="2">2 in a row</option>
                </field>
                <field name="img_width" type="text" label="Image Width" default="300" class="input-xlasrge" />
                <field name="img_height" type="text" label="Image Height" default="300" class="input-xlasrge" />
				
				

                <field name="velocity" type="text" label="MOD_UK_SLIDER_VELOCITY" default="1" class="input-small" />
                <field name="autoplay" type="list" label="MOD_UK_SLIDER_AUTOPLAY" default="0" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="autoplay_interval" type="text" label="MOD_UK_SLIDER_AUTOPLAY_INTERVAL" default="7000" class="input-small" />
                <field name="finite" type="list" label="Endless Sliding" default="true" class="btn-group">
                    <option value="false">JYES</option>
                    <option value="true">JNO</option>
                </field>
                <field name="pause_on_hover" type="list" label="Pause on Hover" default="true" class="btn-group">
                    <option value="true">JYES</option>
                    <option value="false">JNO</option>
                </field>

				<field type="spacer" name="myspacer2" label="Text before" />
				<field name="content_before_class" type="text" label="Content CSS Class" class="input-large"/>
				<field name="content_before" type="editor" label="Content Text" rows="2" filter="raw" /> 


            </fieldset>

            <fieldset name="slides">
                <field name="items" type="subform" label="COM_MODULES_SLIDES_FIELDSET_LABEL" formsource="/modules/mod_uk_stripes/forms/form.xml" multiple="true" min="0" layout="joomla.form.field.subform.repeatable" />
            </fieldset>

            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
						<field name="moduleclass_sfx" type="textarea" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"  rows="1" />

                <field name="cache" type="list" label="COM_MODULES_FIELD_CACHING_LABEL"  default="1">
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                </field>
            </fieldset>

        </fields>
    </config>
</extension>