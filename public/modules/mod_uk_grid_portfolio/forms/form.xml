<?xml version="1.0" encoding="UTF-8"?>
<form>

    <field name="title" type="text" label="MOD_UK_GRID_FORM_TITLE" class="input-large"  />
	<field name="overlay_style" type="list" label="Overlay Style" default="uk-grid" >
		<option value="uk-transition-fade uk-position-cover uk-position-small uk-overlay uk-overlay-default uk-flex uk-flex-center uk-flex-middle">Fade Center White</option>
		<option value="uk-transition-fade uk-position-cover uk-position-small uk-overlay uk-overlay-primary uk-flex uk-flex-center uk-flex-middle uk-dark">Fade Center Dark</option>
		<option value="uk-transition-slide-bottom uk-position-bottom uk-overlay uk-overlay-default">Bottom White</option>
		<option value="uk-transition-slide-bottom uk-position-bottom uk-overlay uk-overlay-primary">Bottom Dark</option>
	</field>
	<field name="tags"  type="text" label="JTAG" description="Tags must be Comma seperated Example: Design,Web,Print" class="input-large" />
    				

    <field name="img" type="media" label="Image" class="input-large"  />
	<field name="modal_typ" type="list" label="Modal Typ" >
        <option value="0">Center Screen Modal</option>
        <option value="1">Full Screen Modal</option>
    </field>	
	<field name="modal_id" type="text" label="ModalBox ID" description="Unique Modal Box ID. No special chars or empty spaces" default="modal001" class="input-small" />

	<field name="cols" type="radio" label="Modalbox Content" default="0" >
		<option value="0">JHIDE</option>
		<option value="1">JSHOW</option>
	</field>
	<field name="modal_img" type="media" label="Modalbox Image" class="input-large" showon="cols!:0" />

    <field name="content" type="editor" label="MOD_UK_GRID_FORM_CONTENT" filter="raw" showon="cols!:0"  />
    
</form>
