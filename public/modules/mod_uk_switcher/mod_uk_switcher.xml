<?xml version="1.0"?>
<extension type="module" version="3.7" method="upgrade" client="site">
    <name>UIkit 3 Switcher</name>
    <author>Joomlaplates</author>
    <copyright>Â© 2022 Joomlaplates. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later; see http://www.gnu.org/licenses/gpl-3.0.txt</license>
    <version>1.2.3</version>
    <creationDate>2023</creationDate>
    <description><![CDATA[
		<p class="btn btn-sm btn-info" p>Version 1.2.3</p>
		<p><a class="btn btn-sm btn-success" href="https://www.joomlaplates.de/dokumentation.html" target="_blank">Dokumentation</a></p>
		<p>Image Height works only in mobile view if the picture is above the text</p>
    ]]></description>
	<updateservers>
		<server type="extension" priority="2" name="UIkit 3 Switcher">https://www.joomlaplates.de/updates/uikit/mod_uk_switcher.xml</server>
	</updateservers>	    
	<files>
        <filename module="mod_uk_switcher">mod_uk_switcher.php</filename>
        <folder>forms</folder>
        <folder>tmpl</folder>
    </files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.mod_uk_switcher.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_uk_switcher.sys.ini</language>
    </languages>
    <config>
        <fields name="params">

            <fieldset name="basic">
                
                <field name="img_height" default="300" type="text" label="image Height without PX" class="input-small" />

                <field name="item_style" type="list" label="Style" default="uk-card-white">
                    <option value="">None</option>
					<option value="uk-card-white">White</option>
                    <option value="uk-card-default">White Shadow</option>
                    <option value="bg-dark text-white">Dark</option>
                </field>

				
               


            </fieldset>

            <fieldset name="slides">
                <field name="items" type="subform" label="COM_MODULES_SLIDES_FIELDSET_LABEL" formsource="/modules/mod_uk_switcher/forms/form.xml" multiple="true" min="0" layout="joomla.form.field.subform.repeatable" />
            </fieldset>

            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field name="cache" type="list" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC" default="1">
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                </field>
            </fieldset>

        </fields>
    </config>
</extension>