<?xml version="1.0" encoding="UTF-8"?>
<form>
	<field name="cols" type="radio" label="Show and Hide Items for better Overview" default="0" >
		<option value="0">JHIDE</option>
		<option value="1">JSHOW</option>
	</field>

    <field name="title" type="text" label="MOD_UK_SLIDER_FORM_TITLE" class="input-xxlarge" showon="cols!:0"/>
	<field name="item_space" type="list" label="Space" default="0" class="btn-group" showon="cols!:0">
		<option value="1">Large</option>
		<option value="0">Small</option>
	</field>	
    <field name="img" type="media" default="" label="MOD_UK_SLIDER_FORM_ING" class="input-xxlarge" showon="cols!:0"/>
	<field name="media_align" type="list" label="Image Position" default="1" class="btn-group" showon="cols!:0">
		<option value="1">Left</option>
		<option value="0">Right</option>
	</field>

	<field name="img_popup" type="list" label="Lightbox Image" default="0" class="btn-group" showon="cols!:0">
		<option value="1">JYES</option>
		<option value="0">JNO</option>
	</field>    

	<field name="content" type="textarea" label="MOD_UK_SLIDER_FORM_CONTENT" rows="3" filter="raw" class="span12" showon="cols!:0"/>
    <field name="link" type="text" label="MOD_UK_SLIDER_FORM_LINK" class="input-xxlarge" showon="cols!:0"/>

	
    <field name="link_text" type="text" label="MOD_UK_SLIDER_FORM_LINK_TEXT" default="Read more" showon="cols!:0"/>
</form>