<?xml version="1.0"?>
<extension type="module" version="3.*" method="upgrade" client="site">
    <name>UIkit 3 Accordion</name>
    <author>Joomlaplates</author>
    <copyright>Â© 2022 Joomlaplates. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later; see http://www.gnu.org/licenses/gpl-3.0.txt</license>
    <version>1.2.3</version>
    <creationDate>2022</creationDate>
    <description><![CDATA[
		<p class="btn btn-sm btn-info" p>Version 1.2.3</p>
		<p><a class="btn btn-sm btn-success" href="https://www.joomlaplates.de/dokumentation.html" target="_blank">Dokumentation</a></p>
    ]]></description>
	<updateservers>
		<server type="extension" priority="2" name="UIkit 3 Accordion">https://www.joomlaplates.de/updates/uikit/mod_uk_accordion.xml</server>
	</updateservers>	
    <files>
        <filename module="mod_uk_accordion">mod_uk_accordion.php</filename>
        <folder>forms</folder>
        <folder>tmpl</folder>
		<filename>changelog.txt</filename>

    </files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.mod_uk_accordion.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_uk_accordion.sys.ini</language>
    </languages>
    <config>
        <fields name="params">

            <fieldset name="basic">
			
				<field name="accordeon_class" type="text" label="Accordeon Class" default="" class="input-small" />
				<field name="titlesize" type="text" label="Title Size" default="14px" class="input-small" />
				<field name="titlecolor" type="color" label="Title Color" format="rgba" default="#FFF"  />
				<field name="titlebg" type="color" label="Title Background" format="rgba" default="#ccc"  />
                <field name="titlespace" type="list" label="Title Space" default="mt-2">
                    <option value="mt-0">None</option>
					<option value="mt-1">XS</option>
                    <option value="mt-2">S</option>
                    <option value="mt-3">M</option>
                    <option value="mt-4">L</option>
                    <option value="mt-5">XL</option>
                </field>

				<field name="itembg" type="color" label="Item Background" format="rgba" default="#ccc"  />

                <field name="itemspace" type="list" label="Item Inner Space" default="p-2">
                    <option value="p-0">None</option>
					<option value="p-1">XS</option>
                    <option value="p-2">S</option>
                    <option value="p-3">M</option>
                    <option value="p-4">L</option>
                    <option value="p-5">XL</option>
                </field>


                <field name="collapsible" type="list" label="Collapsible Items" default="0">
                    <option value="0">First Item Open</option>
                    <option value="1">All Items closed</option>
                </field>
				
                <field name="multiple" type="list" label="MOD_UK_ACCORDION_MULTIPLE" default="0" >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="animation" type="list" label="MOD_UK_ACCORDION_ANIMATION" default="1" >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="duration" type="text" label="MOD_UK_ACCORDION_DURATION" default="200" class="input-small" />

            </fieldset>
           
			
            <fieldset name="els">
                <field name="items" type="subform" label="COM_MODULES_ELS_FIELDSET_LABEL" formsource="/modules/mod_uk_accordion/forms/form.xml" multiple="true" min="0"  />
            </fieldset>

            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field name="cache" type="list" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC" default="1">
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                </field>
            </fieldset>

        </fields>
    </config>
</extension>