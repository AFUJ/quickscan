<?xml version="1.0"?>
<extension type="module" version="3.*" method="upgrade" client="site">
    <name>UIkit 3 Grid</name>
    <author>Joomlaplates</author>
	<authorEmail>support@joomlaplates.de</authorEmail>
    <authorUrl>https://joomlaplates.de/</authorUrl>
    <copyright>Â© 2020 Theme-Point by Joomlaplates. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later; see http://www.gnu.org/licenses/gpl-3.0.txt</license>
    <version>1.2.3</version>
    <creationDate>2023</creationDate>
    <description><![CDATA[
		<p class="btn btn-sm btn-info" p>Version 1.2.3</p>
		<p><a class="btn btn-sm btn-success" href="https://www.joomlaplates.de/dokumentation.html" target="_blank">Dokumentation</a></p>
    ]]></description>
	<updateservers>
		<server type="extension" priority="2" name="UIkit 3 Grid">https://www.joomlaplates.de/updates/uikit/mod_uk_grid.xml</server>
	</updateservers>
    <files>
        <filename module="mod_uk_grid">mod_uk_grid.php</filename>
		<filename>helper.php</filename>
		<filename>changelog.txt</filename>
        <folder>forms</folder>
        <folder>tmpl</folder>
    </files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.mod_uk_grid.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_uk_grid.sys.ini</language>
    </languages>
    <config>
        <fields name="params">

            <fieldset name="basic">
                <field name="item_style" type="list" label="Style" default="">
                    <option value="">None</option>
					<option value="uk-card uk-card-white">White</option>
                    <option value="uk-card uk-card-default">White Shadow</option>
                    <option value="uk-card uk-card-secondary text-white">Dark</option>
                </field>
				<field name="show_tags" type="list" label="Show Tags" default="uk1" class="btn-group">
                    <option value="uk1">JYES</option>
                    <option value="uk-hidden">JNO</option>
				</field>				
                
                <field name="height_match" type="list" label="MOD_UK_GRID_HEIGHT_MATCH" default="0" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="height_match_class" type="text" label="MOD_UK_GRID_HEIGHT_MATCH_CLASS" class="input-xlarge" showon="height_match!:0" />

                <field type="spacer" name="spacer" hr="true" />

                <field name="grid" type="list" label="MOD_UK_GRID_GRID" default="uk-grid">
                    <option value="">MOD_UK_GRID_GRID_NONE</option>
                    <option value="uk-grid">MOD_UK_GRID_GRID_DEFAULT</option>
                    <option value="uk-grid uk-grid-small">MOD_UK_GRID_GRID_SMALL</option>
                    <option value="uk-grid uk-grid-medium">MOD_UK_GRID_GRID_MEDIUM</option>
                    <option value="uk-grid uk-grid-large">MOD_UK_GRID_GRID_LARGE</option>
                    <option value="uk-grid uk-grid-collapse">MOD_UK_GRID_GRID_COLLAPSE</option>
                </field>
                <field name="grid_divider" type="list" label="MOD_UK_GRID_GRID_DIVIDER" default="0" class="btn-group" showon="grid!:">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>


                <field name="grid_center" type="list" label="MOD_UK_GRID_GRID_CENTER" default="0" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="masonry" type="list" label="MOD_UK_GRID_MASONRY" default="0" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>



                <field name="cols" type="list" label="Enable Grid" default="1" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="cols_all" type="list" label="MOD_UK_GRID_COLS_ALL" class="btn-group" default="uk-child-width-1-1" showon="cols!:0">
                    <option value="uk-child-width-1-1">MOD_UK_GRID_COL_1</option>
                    <option value="uk-child-width-1-2">MOD_UK_GRID_COL_2</option>
                    <option value="uk-child-width-1-3">MOD_UK_GRID_COL_3</option>
                    <option value="uk-child-width-1-4">MOD_UK_GRID_COL_4</option>
                    <option value="uk-child-width-1-5">MOD_UK_GRID_COL_5</option>
                    <option value="uk-child-width-1-6">MOD_UK_GRID_COL_6</option>
                </field>
                <field name="cols_s" type="list" label="MOD_UK_GRID_COLS_S" class="btn-group" default="uk-child-width-1-1@s" showon="cols!:0">
                    <option value="uk-child-width-1-1@s">MOD_UK_GRID_COL_1</option>
                    <option value="uk-child-width-1-2@s">MOD_UK_GRID_COL_2</option>
                    <option value="uk-child-width-1-3@s">MOD_UK_GRID_COL_3</option>
                    <option value="uk-child-width-1-4@s">MOD_UK_GRID_COL_4</option>
                    <option value="uk-child-width-1-5@s">MOD_UK_GRID_COL_5</option>
                    <option value="uk-child-width-1-6@s">MOD_UK_GRID_COL_6</option>
                </field>
                <field name="cols_m" type="list" label="MOD_UK_GRID_COLS_M" class="btn-group" default="uk-child-width-1-2@m" showon="cols!:0">
                    <option value="uk-child-width-1-1@m">MOD_UK_GRID_COL_1</option>
                    <option value="uk-child-width-1-2@m">MOD_UK_GRID_COL_2</option>
                    <option value="uk-child-width-1-3@m">MOD_UK_GRID_COL_3</option>
                    <option value="uk-child-width-1-4@m">MOD_UK_GRID_COL_4</option>
                    <option value="uk-child-width-1-5@m">MOD_UK_GRID_COL_5</option>
                    <option value="uk-child-width-1-6@m">MOD_UK_GRID_COL_6</option>
                </field>
                <field name="cols_l" type="list" label="MOD_UK_GRID_COLS_L" class="btn-group" default="uk-child-width-1-3@l" showon="cols!:0">
                    <option value="uk-child-width-1-1@l">MOD_UK_GRID_COL_1</option>
                    <option value="uk-child-width-1-2@l">MOD_UK_GRID_COL_2</option>
                    <option value="uk-child-width-1-3@l">MOD_UK_GRID_COL_3</option>
                    <option value="uk-child-width-1-4@l">MOD_UK_GRID_COL_4</option>
                    <option value="uk-child-width-1-5@l">MOD_UK_GRID_COL_5</option>
                    <option value="uk-child-width-1-6@l">MOD_UK_GRID_COL_6</option>
                </field>
                <field name="cols_xl" type="list" label="MOD_UK_GRID_COLS_XL" class="btn-group" default="uk-child-width-1-3@xl" showon="cols!:0">
                    <option value="uk-child-width-1-1@xl">MOD_UK_GRID_COL_1</option>
                    <option value="uk-child-width-1-2@xl">MOD_UK_GRID_COL_2</option>
                    <option value="uk-child-width-1-3@xl">MOD_UK_GRID_COL_3</option>
                    <option value="uk-child-width-1-4@xl">MOD_UK_GRID_COL_4</option>
                    <option value="uk-child-width-1-5@xl">MOD_UK_GRID_COL_5</option>
                    <option value="uk-child-width-1-6@xl">MOD_UK_GRID_COL_6</option>
                </field>
				<field type="spacer" name="myspacer2" label="Text before" />

				<field name="content_before_class" type="text" label="Content CSS Class" class="input-large"/>
				<field name="content_before" type="editor" label="Content Text" rows="2" filter="raw" /> 
            </fieldset>

            <fieldset name="els">
                <field name="items" type="subform" label="COM_MODULES_ELS_FIELDSET_LABEL" formsource="/modules/mod_uk_grid/forms/form.xml" multiple="true" layout="joomla.form.field.subform.repeatable" />
            </fieldset>
            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" />
						<field name="moduleclass_sfx" type="textarea" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"  rows="1" />

                <field name="cache" type="list" label="COM_MODULES_FIELD_CACHING_LABEL"  default="1">
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                </field>
            </fieldset>

        </fields>
    </config>
</extension>