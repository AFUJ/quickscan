<?xml version="1.0" encoding="UTF-8"?>
<form>
	<field name="cols" type="radio" label="Show and Hide Items for better Overview" default="0" >
		<option value="0">JHIDE</option>
		<option value="1">JSHOW</option>
	</field>
    <field name="img" type="media" default="" label="MOD_UK_GRID_FORM_ING" class="input-xxlarge"  />
	<field name="img_popup" type="list" label="Lightbox Image" default="0" class="btn-group" showon="cols!:0">
		<option value="1">JYES</option>
		<option value="0">JNO</option>
	</field>
    <field name="title" type="text" label="MOD_UK_GRID_FORM_TITLE" class="input-xxlarge" showon="cols!:0" />
    <field name="content" type="textarea" label="MOD_UK_GRID_FORM_CONTENT" rows="3" filter="raw" class="span12" showon="cols!:0" />
	<field name="tags"  type="text" label="JTAG" description="Tags must be Comma seperated Example: Design,Web,Print" class="input-xlarge" showon="cols!:0"/>
    <field name="link" type="text" label="MOD_UK_GRID_FORM_LINK" default="" class="input-xxlarge"  showon="cols!:0"/>
    <field name="link_text" type="text" label="MOD_UK_GRID_FORM_LINK_TEXT" default="Read more" showon="cols!:0" />
		<field name="link_target" type="list" label="Target" default="_self" class="btn-group" showon="cols!:0">
		<option value="_blank">Blank</option>
		<option value="_self">Self</option>
	</field>


    <field name="al_title" type="list" label="MOD_UK_GRID_FORM_AL_TITLE" default="uk-text-center" showon="cols!:0">
        <option value="uk-text-left">MOD_UK_GRID_FORM_AL_LEFT</option>
        <option value="uk-text-center">MOD_UK_GRID_FORM_AL_CENTER</option>
        <option value="uk-text-right">MOD_UK_GRID_FORM_AL_RIGHT</option>
        <option value="uk-text-justify">MOD_UK_GRID_FORM_AL_JUSTIFY</option>
    </field>					

    <field name="al_content" type="list" label="MOD_UK_GRID_FORM_AL_CONTENT" default="uk-text-center" showon="cols!:0">
        <option value="uk-text-left">MOD_UK_GRID_FORM_AL_LEFT</option>
        <option value="uk-text-center">MOD_UK_GRID_FORM_AL_CENTER</option>
        <option value="uk-text-right">MOD_UK_GRID_FORM_AL_RIGHT</option>
        <option value="uk-text-justify">MOD_UK_GRID_FORM_AL_JUSTIFY</option>
    </field>
	
</form>
