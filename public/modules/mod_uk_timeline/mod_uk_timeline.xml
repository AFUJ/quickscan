<?xml version="1.0"?>
<extension type="module" version="3.*" method="upgrade" client="site">
    <name>UIkit 3 Timeline</name>
    <author>Joomlaplates</author>
	<authorEmail>support@joomlaplates.de</authorEmail>
    <authorUrl>https://joomlaplates.de/</authorUrl>
    <copyright>Â© 2021 Joomlaplates. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later; see http://www.gnu.org/licenses/gpl-3.0.txt</license>
    <version>1.2.0</version>
    <creationDate>2022</creationDate>
    <description><![CDATA[
		<p class="btn btn-sm btn-info" p>Version 1.2.0</p>
		<p><a class="btn btn-sm btn-success" href="https://www.joomlaplates.de/dokumentation.html" target="_blank">Dokumentation</a></p>
    ]]></description>
	<updateservers>
		<server type="extension" priority="2" name="UIkit 3 Switcher">https://www.joomlaplates.de/updates/uikit/mod_uk_timeline.xml</server>
	</updateservers>
    <files>
        <filename module="mod_uk_timeline">mod_uk_timeline.php</filename>
		<filename>changelog.txt</filename>
		<filename>css/mod_uk_timeline.css</filename>
        <folder>forms</folder>
        <folder>tmpl</folder>
        <folder>css</folder>
    </files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.mod_uk_timeline.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_uk_timeline.sys.ini</language>
    </languages>
    <config>
        <fields name="params">

		<fieldset name="basic">
			<field name="timelinecolor" type="color" label="General Timeline Color" class="input-xlasrge" />
			<field name="timeline_bg" type="color" label="Timeline Box Background" default="#f2f2f2"  />
			<field name="timeline_color" type="color" label="Timeline Box Text Color" default="#f2f2f2"  />
			


		</fieldset>
            <fieldset name="slides">
                <field name="items" type="subform" label="COM_MODULES_SLIDES_FIELDSET_LABEL" formsource="/modules/mod_uk_timeline/forms/form.xml" multiple="true" min="0" layout="joomla.form.field.subform.repeatable" />
            </fieldset>

            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field name="cache" type="list" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC" default="1">
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                </field>
            </fieldset>

        </fields>
    </config>
</extension>